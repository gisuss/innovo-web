---
import FormContact from "@/components/FormContact.astro";
---

<div class="overflow-hidden w-100 py-6 sm:py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-4 lg:mx-0 lg:max-w-none lg:grid-cols-2">
      <div class="lg:pr-8 lg:pt-4">
        <div class="lg:max-w-lg">
          <p class="tracking-wider mt-2 text-3xl font-bold text-white sm:text-5xl text-center md:text-start" style="font-family: Gilroy_EB;">SOMOS <br><span class="text-purple-400">LA CONEXIÓN</span></p>
          <p class="mt-2 text-3xl tracking-wider text-white sm:text-2xl text-center md:text-start text-pretty" style="font-family: Gilroy_EB;">ENTRE TU EMPRESA Y EL ÉXITO</p>
          
          <FormContact />
        </div>
      </div>
      <img src="/images/banner_1.webp" alt="Banner 1" class="hidden md:block">
    </div>
  </div>
</div>